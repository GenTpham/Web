@model Demo.Models.BookingService

@{
    ViewData["Title"] = "Create";
    Layout = "_Booking";
}

<div class="col-lg-6">
    <div class="wow fadeInUp" data-wow-delay="0.2s">
        <form asp-action="Create">
            <div class="row g-3">
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="CustomerName" class="form-control" id="name" placeholder="Your Name">
                        <label asp-for="CustomerName">Your Name</label>
                        <span asp-validation-for="CustomerName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Email" class="form-control" id="email" placeholder="Your Email">
                        <label asp-for="Email">Your Email</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating date" id="date4" data-target-input="nearest">
                        <input asp-for="BookingDate" class="form-control datetimepicker-input" id="checkout" placeholder="Check Out" data-target="#date4" data-toggle="datetimepicker" />
                        <label asp-for="BookingDate">Check Out</label>
                        <span asp-validation-for="BookingDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Phone" class="form-control" id="phone" placeholder="Your Phone">
                        <label asp-for="Phone">Your Phone</label>
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <select asp-for="ServiceId" class="form-select" asp-items="ViewBag.ServiceId"></select>
                        <label asp-for="ServiceId">Select Service</label>
                        <span asp-validation-for="ServiceId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary w-100 py-3">Book Now</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
