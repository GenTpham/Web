@model Demo.Models.Booking
@{
    ViewData["Title"] = "Xác Nhận Trả Phòng";
    Layout = "_Layout"; // Đảm bảo sử dụng layout phù hợp
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white text-center">
                    <h2 class="mb-0">Xác Nhận Trả Phòng</h2>
                </div>
                <div class="card-body">
                    <h4 class="card-title text-center mb-4">Chi Tiết Đặt Phòng</h4>
                    <dl class="row">
                        <dt class="col-sm-4">Họ và tên:</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Số điện thoại:</dt>
                        <dd class="col-sm-8">@Model.Phone</dd>

                        <dt class="col-sm-4">Ngày nhận phòng:</dt>
                        <dd class="col-sm-8">@Model.CheckInDate.ToShortDateString()</dd>

                        <dt class="col-sm-4">Ngày trả phòng dự kiến:</dt>
                        <dd class="col-sm-8">@Model.CheckOutDate.ToShortDateString()</dd>

                        <dt class="col-sm-4">Số người lớn:</dt>
                        <dd class="col-sm-8">@Model.Adult</dd>

                        <dt class="col-sm-4">Số trẻ em:</dt>
                        <dd class="col-sm-8">@Model.Child</dd>

                        <dt class="col-sm-4">Yêu cầu đặc biệt:</dt>
                        <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.Request) ? "Không có" : Model.Request)</dd>

                        <dt class="col-sm-4">Mã phòng:</dt>
                        <dd class="col-sm-8">@Model.RoomId</dd>
                    </dl>

                    <form asp-action="ConfirmCheckout" asp-route-id="@Model.Id" class="text-center mt-4">
                        <div class="form-group">
                            <label for="actualCheckOutDate" class="form-label">Ngày trả phòng thực tế:</label>
                            <input type="date" id="actualCheckOutDate" name="actualCheckOutDate" class="form-control mb-3" required value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                        </div>
                        <button type="submit" class="btn btn-danger">Xác Nhận Trả Phòng</button>
                        <a asp-action="Index" class="btn btn-secondary">Quay Lại Danh Sách</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>