@model Demo.Models.Booking

@{
    ViewData["Title"] = "Create";
    Layout = "_Booking";
}
<div class="col-lg-6">
    <div class="wow fadeInUp" data-wow-delay="0.2s">
        <form asp-action="Create">
            <div class="row g-3">
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Name" class="form-control" id="name" placeholder="Your Name" />
                        <label asp-for="Name">Your Name</label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Email" class="form-control" id="email" placeholder="Your Email">
                        <label asp-for="Email">Your Email</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating date" id="date3" data-target-input="nearest">
                        <input asp-for="CheckInDate" class="form-control datetimepicker-input" id="checkin" placeholder="Check In" data-target="#date3" data-toggle="datetimepicker" />
                        <label asp-for="CheckInDate">Check In</label>
                        <span asp-validation-for="CheckInDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating date" id="date4" data-target-input="nearest">
                        <input asp-for="CheckOutDate" class="form-control datetimepicker-input" id="checkout" placeholder="Check Out" data-target="#date4" data-toggle="datetimepicker" />
                        <label asp-for="CheckOutDate">Check Out</label>
                        <span asp-validation-for="CheckOutDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Phone" class="form-control" id="phone" placeholder="Your Phone">
                        <label asp-for="Phone">Your Phone</label>
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Child" class="form-control" id="child" placeholder="Child">
                        <label asp-for="Child">Child</label>
                        <span asp-validation-for="Child" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Adult" class="form-control" id="adult" placeholder="Adult">
                        <label asp-for="Adult">Adult</label>
                        <span asp-validation-for="Adult" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <select asp-for="RoomId" class="form-select" asp-items="ViewBag.RoomId"></select>
                        <label asp-for="RoomId">Select A Room</label>
                        <span asp-validation-for="RoomId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <select asp-for="UserId" class="form-select" asp-items="ViewBag.UserId"></select>
                        <label asp-for="UserId">Select User</label>
                        <span asp-validation-for="UserId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <select asp-for="PromotionId" class="form-select" asp-items="ViewBag.PromotionId"></select>
                        <label asp-for="PromotionId">Select User</label>
                        <span asp-validation-for="PromotionId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-floating">
                        <textarea asp-for="Request" class="form-control" placeholder="Special Request" id="message" style="height: 100px"></textarea>
                        <label asp-for="Request">Special Request</label>
                        <span asp-validation-for="Request" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary w-100 py-3">Book Now</button>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
