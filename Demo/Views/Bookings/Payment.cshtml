@model Demo.Models.Booking

@{
    ViewData["Title"] = "Payment";
}

<h1>Payment</h1>

<div>
    <h4>Booking Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Check-in Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CheckInDate)
        </dd>
        <dt class="col-sm-2">
            Check-out Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CheckOutDate)
        </dd>
        <dt class="col-sm-2">
            Total Days
        </dt>
        <dd class="col-sm-10">
            @ViewBag.TotalDays
        </dd>
        <dt class="col-sm-2">
            Room Type
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.room.RoomType)
        </dd>
        <dt class="col-sm-2">
            Price per Night
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.room.Price) VND
        </dd>
        <dt class="col-sm-2">
            Original Total Price
        </dt>
        <dd class="col-sm-10">
            @ViewBag.OriginalPrice VND
        </dd>
        @if (Model.Promotion != null)
        {
            <dt class="col-sm-2">
                Promotion
            </dt>
            <dd class="col-sm-10">
                @Model.Promotion.Name (@Model.Promotion.DiscountPercentage% off)
            </dd>
        }
        <dt class="col-sm-2">
            Final Total Price
        </dt>
        <dd class="col-sm-10">
            @ViewBag.DiscountedPrice VND
        </dd>
    </dl>
</div>

<form asp-action="Payment" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="paymentMethod">Payment Method</label>
        <select name="paymentMethod" class="form-control">
            <option value="CreditCard">Credit Card</option>
            <option value="PayPal">PayPal</option>
            <option value="BankTransfer">Bank Transfer</option>
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Process Payment" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>