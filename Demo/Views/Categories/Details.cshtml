@model Demo.Models.Category

@{
    ViewData["Title"] = "Details";
    Layout = "_Admin";
}
<style>
    .details-header {
        font-size: 2.5em;
        color: #4CAF50;
        text-align: center;
        margin-bottom: 20px;
    }

    .details-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        margin-top: 20px;
        justify-content: center;
    }

    .details-card {
        background: linear-gradient(135deg, #f9f9f9, #e0e0e0);
        border: 1px solid #ddd;
        border-radius: 10px;
        padding: 20px;
        width: calc(33.333% - 20px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .details-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 8px 16px rgba(0,0,0,0.2);
        }

        .details-card dt {
            font-weight: bold;
            color: #555;
            font-size: 1.1em;
            margin-bottom: 5px;
        }

        .details-card dd {
            margin-bottom: 15px;
            color: #333;
            font-size: 1em;
        }

    .details-links {
        text-align: center;
        margin-top: 30px;
    }

        .details-links a {
            color: #007BFF;
            text-decoration: none;
            margin-right: 20px;
            font-size: 1.1em;
            transition: color 0.2s;
        }

            .details-links a:hover {
                color: #0056b3;
                text-decoration: underline;
            }
</style>
<h1>Details</h1>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
