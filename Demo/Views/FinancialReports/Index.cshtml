@model IEnumerable<Demo.Models.FinancialReport>

@{
    ViewData["Title"] = "Financial Reports";
}

<h1>Financial Reports</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Report</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.ReportDate)</th>
            <th>@Html.DisplayNameFor(model => model.TotalRevenue)</th>
            <th>@Html.DisplayNameFor(model => model.TotalExpenses)</th>
            <th>@Html.DisplayNameFor(model => model.NetProfit)</th>
            <th>@Html.DisplayNameFor(model => model.NumberOfBookings)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.ReportDate)</td>
                <td>@Html.DisplayFor(modelItem => item.TotalRevenue)</td>
                <td>@Html.DisplayFor(modelItem => item.TotalExpenses)</td>
                <td>@Html.DisplayFor(modelItem => item.NetProfit)</td>
                <td>@Html.DisplayFor(modelItem => item.NumberOfBookings)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>