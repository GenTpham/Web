@model Demo.Models.Booking

@{
    ViewData["Title"] = "Create";
}

<div class="col-lg-6">
    <div class="wow fadeInUp" data-wow-delay="0.2s">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
