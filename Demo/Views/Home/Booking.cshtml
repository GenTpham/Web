                    <div class="form-floating">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <label asp-for="CheckInDate" class="control-label"></label>
                        <input asp-for="CheckInDate" class="form-control" />
                        <span asp-validation-for="CheckInDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <label asp-for="CheckOutDate" class="control-label"></label>
                        <input asp-for="CheckOutDate" class="form-control" />
                        <span asp-validation-for="CheckOutDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <label asp-for="Adult" class="control-label"></label>
                        <input asp-for="Adult" class="form-control" />
                        <span asp-validation-for="Adult" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <label asp-for="Child" class="control-label"></label>
                        <input asp-for="Child" class="form-control" />
                        <span asp-validation-for="Child" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <label asp-for="Phone" class="control-label"></label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-floating">
                        <label asp-for="RoomId" class="control-label"></label>
