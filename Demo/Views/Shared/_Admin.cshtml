<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<!-- Boxicons -->
	<link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
	<!-- My CSS -->
	<link rel="stylesheet" href="/css/admin.css">

	<title>AdminHub</title>
</head>
<body>


	<!-- SIDEBAR -->
	<section id="sidebar">
		<a href="#" class="brand">
			<i class='bx bxs-smile'></i>
			<span class="text">AdminHub</span>
		</a>
		<ul class="side-menu top">
			<li class="active">
				<a href="#">
					<i class='bx bxs-dashboard'></i>
					<span class="text">Dashboard</span>
				</a>
			</li>
			<li>
				<a href="/Rooms/Index">
					<i class='bx bxs-shopping-bag-alt'></i>
					<span class="text">Room</span>
				</a>
			</li>
			<li>
				<a href="/Users/Index">
					<i class='bx bxs-doughnut-chart'></i>
					<span class="text">User</span>
				</a>
			</li>
			<li>
				<a href="/Categories/Index">
					<i class='bx bxs-message-dots'></i>
					<span class="text">Category</span>
				</a>
			</li>
			<li>
				<a href="/Bookings/Admin_Index">
					<i class='bx bxs-group'></i>
					<span class="text">Booking</span>
				</a>
			</li>
			<li>
				<a href="/BookingServices/Index">
					<i class='bx bxs-group'></i>
					<span class="text">Booking Service</span>
				</a>
			</li>
			<li>
				<a href="/RevenueReports/Index">
					<i class='bx bxs-group'></i>
					<span class="text">Doanh thu</span>
				</a>
			</li>
		</ul>
		<ul class="side-menu">
			<li>
				<a href="#">
					<i class='bx bxs-cog'></i>
					<span class="text">Settings</span>
				</a>
			</li>
			<li>
				<a href="/Users/Logout" class="logout">
					<i class='bx bxs-log-out-circle'></i>
					<span class="text">Logout</span>
				</a>
			</li>
		</ul>
	</section>
	<!-- SIDEBAR -->
	<!-- CONTENT -->
	<section id="content">
		<!-- NAVBAR -->
		<nav>
			<i class='bx bx-menu'></i>
			<a href="#" class="nav-link">Categories</a>
			<form action="#">
				<div class="form-input">
					<input type="search" placeholder="Search...">
					<button type="submit" class="search-btn"><i class='bx bx-search'></i></button>
				</div>
			</form>
			<input type="checkbox" id="switch-mode" hidden>
			<label for="switch-mode" class="switch-mode"></label>
			<a href="#" class="notification">
				<i class='bx bxs-bell'></i>
				<span class="num">8</span>
			</a>
			<a href="#" class="profile">
				<img src="img/people.png">
			</a>
		</nav>
		<!-- NAVBAR -->
		<!-- MAIN -->
		<main>
			@RenderBody();
		</main>
		<!-- MAIN -->
	</section>
	<!-- CONTENT -->

	<script src="/js/admin.js"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>