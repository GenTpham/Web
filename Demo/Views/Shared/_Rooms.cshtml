
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Seaside Hotel</title>
    <link href="https://fonts.googleapis.com/css2?family=Mrs+Saint+Delafield&family=Montserrat:wght@549&family=Heebo:wght@100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <link rel="stylesheet" href="/css/rooms.css">
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
</head>
<body>
    <header>
        <div class="col-md-12" style="background-size: cover;">
            <div id="logo" style="background-size: cover;">
                <img class="logo" src="/img/logo.png" alt="Seaside Hotel Logo">
            </div>
            <div id="mo-button-open">
                <div></div>
                <div></div>
                <div></div>
            </div>
        </div>
    </header>

    <div class="wrapper">
        <div class="menu-overlay" id="menuOverlay">
            <span class="close-btn" id="close-btn">&times;</span>
            <div class="menu-content">
                <img src="/img/logo.png" alt="Seaside Hotel Logo" style="max-width: 100px; margin-bottom: 30px;">
                <p><a asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a></p>
                <p><a asp-area="" asp-controller="Rooms" asp-action="Index">Phòng</a></p>
                <p><a asp-area="" asp-controller="Home" asp-action="Booking">Đặt phòng</a></p>
                <p><a asp-area="" asp-controller="Home" asp-action="About">Giới thiệu</a></p>
                <p><a asp-area="" asp-controller="Home" asp-action="Contact">Liên hệ</a></p>
            </div>
        </div>

        <div id="slider">
            <div class="slide-content">
                <h4>Select</h4>
                <h1>ROOMS</h1>
            </div>
        </div>

       
        @RenderBody()
        <div id="social-links">
            <a href="#" class="fab fa-facebook"></a>
            <a href="#" class="fab fa-twitter"></a>
            <a href="#" class="fab fa-instagram"></a>
        </div>

        <footer class="site-footer">
            <div class="footer-text">
                <p>&copy; Copyright 2023 Seaside Hotel. All rights reserved.</p>
            </div>
            <div class="social-icons">
                <a href="#"><i class="fab fa-facebook"></i></a>
                <a href="#"><i class="fab fa-twitter"></i></a>
                <a href="#"><i class="fab fa-instagram"></i></a>
                <a href="#"><i class="fab fa-youtube"></i></a>
            </div>
        </footer>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="script.js"></script>

    <script>
        // JavaScript để xử lý menu và hiệu ứng
        function toggleMenu() {
            var menu = document.getElementById("menuOverlay");
            menu.style.display = menu.style.display === "block" ? "none" : "block";
        }

        document.getElementById("mo-button-open").addEventListener("click", toggleMenu);

        document.getElementById('mo-button-open').addEventListener('click', function () {
            var menuOverlay = document.getElementById('menuOverlay');
            menuOverlay.classList.add('open');
            menuOverlay.classList.remove('close');
        });

        document.getElementById('close-btn').addEventListener('click', function () {
            var menuOverlay = document.getElementById('menuOverlay');
            menuOverlay.classList.add('close');
            setTimeout(function () {
                menuOverlay.classList.remove('close');
                menuOverlay.style.display = 'none';
            }, 500);
        });

        document.addEventListener('DOMContentLoaded', function () {
            var slider = document.querySelector('.slide-content');
            slider.addEventListener('animationend', function () {
                showElements('.container, .row.align-items-center');
            });
        });

        function showElements(selector) {
            var elements = document.querySelectorAll(selector);
            elements.forEach(function (element) {
                element.classList.remove('hidden');
                element.style.animation = 'slideUpToShow 1.8s forwards';
            });
        }
    </script>
    

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>